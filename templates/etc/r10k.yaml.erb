#
# The location to use for storing cached Git repos
#
:cachedir: '<%= @mergedsettings['cachedir'] %>'

# A list of git repositories to create
:sources:
<% @remotes.each_pair do |key, hash| -%>
  :<%= key %>:
    remote: '<%= hash['url'] %>'
    basedir: '<%= hash['basedir'] %>'
<% end -%>

:purgedirs:
<% @remotes.each_pair do |key, hash| -%>
  - '<%= hash['basedir'] %>'
<% end -%>

