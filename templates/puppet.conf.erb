[main]
<% main_hash = scope.function_hiera_hash(['puppet::main']) -%>
<% main_hash.keys.sort.each do |k,v| -%>
<%= "#{k} = #{main_hash[k]}" %>
<% end -%>

[agent]
<% agent_hash = scope.function_hiera_hash(['puppet::agent']) -%>
<% agent_hash.keys.sort.each do |k| -%>
<%= "#{k} = #{agent_hash[k]}" %>
<% end -%>

<% if @instance_role == "puppet" -%>
[master]
  <% master_hash = scope.function_hiera_hash(['puppet::master']) -%>
  <% master_hash.keys.sort.each do |k| -%>
<%= "#{k} = #{master_hash[k]}" %>
<% end -%>
<% end -%>
