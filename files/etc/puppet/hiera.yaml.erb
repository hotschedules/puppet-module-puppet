---

:backends:
  - yaml
  - multiyaml

:multiyaml:
  :backends:
<% @remotes.keys.sort.each do |key| -%>
  - <%= key %>
<% end -%>

:hierarchy:
<% @datasources.sort.each do |name| -%>
  - <%= name %>
<% end -%>

<% @remotes = Hash[ @remotes.sort{ |v0, v1| v0[0] <=> v1[0] } ] -%>
<% @remotes.each_pair do |key, hash| -%>
:<%= key %>:
 :datadir: "<%= hash['dir'] %>"
<% end -%>

:merge_behavior: deeper
