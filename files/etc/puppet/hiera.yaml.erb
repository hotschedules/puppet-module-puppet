---

:backends:
  - yaml
  - multiyaml

:multiyaml:
  :backends:
<% @remotes.keys.sort.each do |key| -%>
  - <%= key %>
<% end -%>

:hierarchy:
<% @datasources.each do |name| -%>
  - <%= name %>
<% end -%>

<% @remotes = @remotes.sort_by { |key, hash| hash } -%>
<% @remotes.each do |remote| -%>
:<%= remote[0] %>:
 :datadir: "<%= remote[1]['dir'] %>"
<% end -%>

:merge_behavior: deeper
