# vim: filetype=config tabstop=2 expandtab shiftwidth=2 softtabstop=2 foldmethod=marker smartindent
#
# The location to use for storing cached Git repos
#
:cachedir: '<%= @mergedsettings['cachedir'] %>'

# A list of git repositories to create
:sources:
  # This will clone the git repository and instantiate an environment per
  # branch in <%= @r10kbasedir %>
  :main:
    remote:   '<%= @mergedsettings['remote'] %>'
    basedir:  '<%= @mergedsettings['basedir'] %>'

:purgedirs:
  - '<%= @mergedsettings['basedir'] %>'

